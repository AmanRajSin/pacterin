<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Product Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="../css/stylesheet-productpage.css">
    <link href="https://fonts.googleapis.com/css?family=Exo+2" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.0/css/all.css" integrity="sha384-aOkxzJ5uQz7WBObEZcHvV5JvRW3TUc2rNPA7pe3AwnsUohiw1Vj2Rgx2KSOkF5+h" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>

        $(document).ready(function(){
            const id = '<%= (id) ? id : `` %>';
            jQuery.ajax({
                url: "/product/"+id,
                //data:'username=' + username,
                type: "GET",
                success:function(data) {
                    console.log(data.id);
                    var name = data.id;
                    data.id = data.id.replace(/ /g, '%20');
                    data.id = data.id.replace(/\(/g, '%28');
                    data.id = data.id.replace(/\)/g, '%29');
                    data.id = data.id.replace(/\|/g, '%7C');
                    $('.flex-container').append(`<div id="productShowcaseImage">
                                                <img src="`+data.image+`" id="productShowcase">
                                                </div>
                                                <div id="productShowcaseInfo">
                                                <p id="productName2">`+name+`</p>
                                                <p id="gameName">`+data.game_name+`</p> <a href="https://steamcommunity.com/market/listings/730/`+ data.id +`" id="productSteamlink"><i class="fab fa-steam"></i> Steam Page</a> 
                                                <p id="productPrice2">$`+data.normal_price+` USD</p>
                                                <a href="#" class="productButton"> <i class="fas fa-shopping-cart"></i> BUY</a> <a href="#" class="productButton" style="right: 0;"> <i class="fas fa-heart"></i> ADD TO WISHLIST</a>
                                                </div>`);
                },
                error:function () {
      		    }
            });
        });
    </script>

</head>

